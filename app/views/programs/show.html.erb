<p id="notice"><%= notice %></p>

<h1>Projects</h1>

<table class="table table-hover table-bordered">
  <thead class="thead-default">
    <tr class="row m-0">
      <th class="d-inline-block col-md-10">Project</th>
      <th class="d-inline-block col-md-2 text-center">Federal Contribution</th>
    </tr>
  </thead>

  <tbody>
    <% @projects.each do |project| %>
      <tr class="row m-0">
        <td class="d-inline-block col-md-10"><%= link_to project.title_en, project %></td>
        <td class="d-inline-block col-md-2 text-center"><%= number_to_currency(project.federal_contribution) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= will_paginate @projects, renderer: WillPaginate::ActionView::BootstrapLinkRenderer %>