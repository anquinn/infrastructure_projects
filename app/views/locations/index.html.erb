<p id="notice"><%= notice %></p>

<div class="row">
  <div class="col-sm-12">
    <%= search_form_for @q , :html => { :class => "" } do |f| %>
      <div class="input-group">
        <%= f.search_field :name_en_cont, class: 'form-control form-control-lg', placeholder: "Search locations" %>
        <span class="input-group-btn">
          <%= f.submit "Search", :class => 'btn btn-primary' %>
        </span>
      </div>
      <div class="form-group">
        
        
      </div>
    <% end %>
  </div>
</div>

<h1>Locations</h1>

<table class="table table-hover table-bordered">
  <thead class="thead-default">
    <tr class="row m-0">
      <th class="d-inline-block col-md-10"><%= sort_link(@q, :name_en, 'Location', default_order: :asc) %></th>
      <th class="d-inline-block col-md-2 text-center"><%= sort_link(@q, :projects_count, '# of Projects', default_order: :asc) %></th>
    </tr>
  </thead>

  <tbody>
    <% @locations.each do |location| %>
      <tr class="row m-0">
        <td class="d-inline-block col-md-10"><%= link_to location.name_en, location %></td>
        <td class="d-inline-block col-md-2 text-center"><%= location.projects_count %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= will_paginate @locations, renderer: WillPaginate::ActionView::BootstrapLinkRenderer %>
