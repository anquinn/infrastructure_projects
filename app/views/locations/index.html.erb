<p id="notice"><%= notice %></p>

<div class="row">
  <div class="col-sm-12">
    <%= search_form_for @q , :html => { :class => "" } do |f| %>
      <div class="input-group">
        <%= f.search_field :name_en_cont, class: 'form-control form-control-lg', placeholder: "Search locations" %>
        <div class="input-group-append">
          <%= f.submit "Search", :class => 'btn btn-primary' %>
        </div>
      </div>
      <div class="form-group">
        
        
      </div>
    <% end %>
  </div>
</div>

<h1>Locations</h1>

<div class="row">
  <div class="col-sm-12">
    <div class="table-responsive">
      <table class="table table-hover table-bordered">
        <thead class="thead-light">
          <tr>
            <th style="width:75%;"><%= sort_link(@q, :name_en, 'Location', default_order: :asc) %></th>
            <th style="width:25%;" class="text-center"><%= sort_link(@q, :projects_count, '# of Projects', default_order: :asc) %></th>
          </tr>
        </thead>

        <tbody>
          <% @locations.each do |location| %>
            <tr>
              <td><%= link_to location.name_en, location %></td>
              <td class="text-center"><%= location.projects_count %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
<%= will_paginate @locations, renderer: WillPaginate::ActionView::BootstrapLinkRenderer %>
