<p id="notice"><%= notice %></p>

<div class="row">
  <div class="col-sm-12">
    <%= search_form_for @q , :html => { :class => "" } do |f| %>
      <div class="input-group">
        <%= f.search_field :title_en_or_location_name_en_cont, class: 'form-control form-control-lg', placeholder: "Search project names or locations" %>
        <span class="input-group-btn">
          <%= f.submit "Search", :class => 'btn btn-primary' %>
        </span>
      </div>
      <div class="form-group">
        
        
      </div>
    <% end %>
  </div>
</div>

<h1>Projects</h1>
<div class="row">
  <div class="col-sm-12">
    <table class="table table-hover table-bordered ">
      <thead class="thead-default">
        <tr>
          <th style="width:60%;" ><%= sort_link(@q, :title_en, 'Title', default_order: :asc) %></th>
          <th style="width:20%;" ><%= sort_link(@q, :location_name_en, 'Location', default_order: :asc) %></th>
          <th style="width:20%;" >Region</th>
        </tr>
      </thead>

      <tbody>
        <% @projects.each do |project| %>
          <tr>
            <td ><%= link_to project.title_en, project %></td>
            <td ><%= link_to project.location.name_en, project.location %></td>
            <td ><%= project.location.region.region_display %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

<%= will_paginate @projects, renderer: WillPaginate::ActionView::BootstrapLinkRenderer %>