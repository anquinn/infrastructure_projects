<p id="notice"><%= notice %></p>

<div class="row">
  <div class="col-sm-12">
    <%= search_form_for @q , :html => { :class => "" } do |f| %>
      <div class="input-group">
        <%= f.search_field :title_en_cont, class: 'form-control form-control-lg', placeholder: "Search categories" %>
        <span class="input-group-btn">
          <%= f.submit "Search", :class => 'btn btn-primary' %>
        </span>
      </div>
      <div class="form-group">
        
        
      </div>
    <% end %>
  </div>
</div>

<h1>Categories</h1>
<div class="row">
  <div class="col-sm-12">
    <div class="table-responsive">
      <table class="table table-hover table-bordered">
        <thead class="thead-default">
          <tr>
            <th style="width:75%;"><%= sort_link(@q, :title_en, 'Category', default_order: :asc) %></th>
            <th style="width:25%;" class="text-center"><%= sort_link(@q, :projects_count, '# of Projects', default_order: :asc) %></th>
          </tr>
        </thead>

        <tbody>
          <% @categories.each do |category| %>
            <tr>
              <td><%= link_to category.title_en, category %></td>
              <td class="text-center"><%= category.projects_count %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>

<%= will_paginate @categories, renderer: WillPaginate::ActionView::BootstrapLinkRenderer %>
